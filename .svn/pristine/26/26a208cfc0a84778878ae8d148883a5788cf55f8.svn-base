<template>
  <div class="flex flex1" id="wrap">
    <leftTreeNav :treeList='treeList' :curIndex='curIndex' :teacherId='teacherId' />
    <div class="flex1 flex" id="cnt">
      <iframe width="100%" height="100%" name="panel_iframe" frameborder='no' marginwidth='0' marginheight='0' scrolling='no' border='0' :src='iframeUrl'></iframe>
    </div>
    <!-- <footerNav/> -->
  </div>
</template>
<script>
import leftTreeNav from '@/views/layout/components/leftTreeNav'
import * as menuApi from '@/api/menu'
export default {
  components: {
    leftTreeNav
    // footerNav
  },
  data() {
    return {
      teacherId: '', //教师选中ID
      curIndex: '', //索引号
      treeList: [],
      iframeUrl: '',
      setIp: this.$store.state.user.innerIframeUrl
    }
  },
  created() {
    // this.teacherId = this.$route.params.tId
  },
  watch: {
    $route() {
      this.setIframeUrl()
    }
  },
  mounted() {
    //引导页跳转
    let obj = {}
    //导航菜单ID
    obj.id = this.$route.params.tId
    this.$store.commit('curNavId', this.$route.params.tId)
    //教师菜单ID
    this.teacherId = this.$route.params.curId + ''

    menuApi.getMenu(obj, res => {
      for (let i in res) {
        if (res[i].name === '教师画像') {
          this.treeList = res[i].children
          //获取对应索引号
          this.curIndex = 
            this.treeList
              .map(item => {
                return item.id
              })
              .indexOf(this.teacherId) + ''
        }
      }
    })
    this.setIframeUrl()
  },
  methods: {
    setIframeUrl() {
      let panelId = this.$route.params.panelId
      let siteId = this.$route.params.siteId
      this.iframeUrl = this.setIp + '/zymdMenu/loadPanel?panelId=' + panelId + '&siteId=' + siteId
    }
  }
}
</script>
<style rel="stylesheet/less" lang="less" scoped>
#cnt {
  padding: 0px;
}
</style>